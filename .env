# Application Settings
DESCRIPTION=FastAPI_Application

# =============================================================================
# JOBSITES INTEGRATION PLATFORM - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and update the values for your environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=jobsites_integration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# üê≥ For Docker development (default):
#POSTGRES_HOST=postgres

# üíª For local development - change to:
 POSTGRES_HOST=localhost

# Database URL for application (constructed from above variables)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# üê≥ For Docker development (default):
REDIS_HOST=redis

# üíª For local development - change to:
# REDIS_HOST=localhost

# Redis URL for application (constructed from above variables)
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application
PROJECT_NAME=Project_name
VERSION=0.1.0
DEBUG=true
APP_PORT=8000

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY=dev-secret-key-change-in-production-please-use-at-least-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================
# Celery broker and result backend URLs
CELERY_BROKER_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0
CELERY_RESULT_BACKEND=redis://${REDIS_HOST}:${REDIS_PORT}/0

# Celery settings
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC

# =============================================================================
# MONITORING
# =============================================================================
# Flower (Celery monitoring)
FLOWER_PORT=5555
FLOWER_BASIC_AUTH=admin:admin

# Logging
LOG_LEVEL=INFO

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to false in production
CORS_ALLOW_ALL_ORIGINS=true
CORS_ALLOW_CREDENTIALS=true

# Database connection pool settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# Uncomment and set these for production deployment

# Security
# SECRET_KEY=your-super-secure-secret-key-for-production
# DEBUG=false

# Database (use environment-specific values)
# DATABASE_URL=postgresql://user:password@host:port/database

# Redis (use environment-specific values)
# REDIS_URL=redis://host:port/db

# CORS (restrict in production)
# CORS_ALLOW_ALL_ORIGINS=false
# CORS_ALLOWED_ORIGINS=["https://yourdomain.com"]


